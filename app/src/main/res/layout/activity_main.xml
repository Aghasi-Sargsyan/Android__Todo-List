<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/second_constraint"
    android:visibility="gone"
    android:background="@android:drawable/editbox_background_normal">

    <TextView
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:paddingEnd="50dp"
        android:paddingStart="0dp"
        android:text="Title"
        android:textColor="@color/titleTextColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/second_constraint" />

    <TextView
        android:id="@+id/description_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:paddingEnd="50dp"
        android:paddingStart="0dp"
        android:text="description"
        android:textColor="@color/descriptTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/title_main"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/date_main"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:fontFamily="serif-monospace"
        android:paddingEnd="20dp"
        android:paddingStart="0dp"
        android:text="12.25.4561"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/second_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/description_main"
        app:layout_constraintVertical_bias="0.42000002" />

    <TextView
        android:id="@+id/time_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="05:00"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/date_main"
        app:layout_constraintEnd_toEndOf="@id/second_constraint"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/date_main"
        app:layout_constraintTop_toTopOf="@+id/date_main" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="25dp" />
</android.support.constraint.ConstraintLayout>


    <ImageView
        android:id="@+id/add_main"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_add_circle_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>